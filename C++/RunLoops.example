                    int sum = decimal + jIndex + 1;

                    if(jIndex == 0) {
                        // PRINT THE sum
                        System.out.printf("%3d", sum);
                    } else {
                        // PRINT THE sum, WITH A ","
                        System.out.printf(", %3d", sum);
                    }

                    if(response == sum) {
                        return;
                    }
                }
                System.out.println();
            }
        }

        */

        cout << "Called runWithNestedForLoops" << endl << endl;

        srand(time(NULL));
        int response = rand() % 100;

        cout << "Returning on " << response << endl << endl;

        // FOR LOOP ON iIndex
        for (int iIndex = 0; iIndex < 10; iIndex++) {

            int decimal = iIndex * 10;

            // FOR LOOP ON jIndex
            for (int jIndex = 0; jIndex < 10; jIndex++) {
                
                int sum = decimal + jIndex + 1;

                if(jIndex == 0) {
                    // PRINT THE sum
                    printFormatted("%3d", sum);
                } else {
                    // PRINT THE sum, WITH A ","
                    printFormatted(", %3d", sum);
                }

                if(response == sum) {
                    cout << endl << endl;
                    return;
                }
            }
        
            cout << endl << endl;

        }
    }

};

int main(int argc, char const *argv[])
{
    RunLoops::runWithWhileLoop();
    RunLoops::runWithDoWhileLoop();
    RunLoops::runWithForLoops();
    RunLoops::runWithNestedForLoops();

    return 0;
}

